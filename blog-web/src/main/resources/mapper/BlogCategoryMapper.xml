<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ballcat.blog.mapper.BlogCategoryMapper">

    <resultMap id="baseResultMap" type="com.ballcat.blog.entity.BlogCategory">
        <id column="id" property="id"/>
        <result column="category_name" property="categoryName"/>
        <result column="is_deleted" property="deleted"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <update id="enabledBlogCategory">
        update t_blog_category
        set is_deleted = #{enabled}
        where id = #{id}
    </update>

    <select id="getByCategoryName" resultMap="baseResultMap">
        select id
        from t_blog_category
        where category_name = #{categoryName}
    </select>

    <select id="listBlogCategory" resultMap="baseResultMap">
        select id, category_name, is_deleted, creat_time, update_time
        from t_blog_category
        <where>
            <if test="categoryName != null">
                category_name like concat('%', #{categoryName}, '%')
            </if>
            <if test="deleted != null">
                and is_deleted = #{deleted}
            </if>
        </where>
    </select>

</mapper>
